<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userMessage.PwdFragment"
    android:gravity="center"
    android:background="@drawable/starsky">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/minput1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mpass"
            android:ems="10"
            android:theme="@style/myeditText"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/minput2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yanzheng"
            android:ems="5"
            android:theme="@style/myeditText"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/minput2"
            android:text="发送验证码"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button"/>
    </RelativeLayout>
    <Button
        android:layout_width="100dp"
        android:layout_below="@id/rl2"
        android:layout_height="wrap_content"/>

</RelativeLayout>