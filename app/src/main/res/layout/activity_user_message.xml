<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userMessage.UserMessageActivity"
    android:gravity="center"
    android:paddingLeft="90dp"
    android:paddingRight="90dp"
    android:background="@drawable/starsky">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="450dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mrela1">
        <TextView
            android:id="@+id/mpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/minput1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mpass"
            android:ems="10"
            android:theme="@style/myeditText"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mrela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/mrela1">
        <TextView
            android:id="@+id/memail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/minput2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/memail"
            android:ems="10"
            android:theme="@style/myeditText"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mrela3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mrela2"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/minput3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mname"
            android:ems="10"
            android:theme="@style/myeditText"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/mrela3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button"
        android:text="确认修改"
        android:textColor="@color/colorWhite"
        />

</RelativeLayout>
</RelativeLayout>